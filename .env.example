# =============================================================================
# LeadBotStudio Environment Variables
# Copy this file to .env.local and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Database (Supabase PostgreSQL)
# -----------------------------------------------------------------------------
DATABASE_URL="postgresql://user:password@host:5432/dbname"
DIRECT_URL="postgresql://user:password@host:5432/dbname"

# Supabase client (for storage operations)
SUPABASE_URL=""
SUPABASE_SERVICE_KEY=""
# NEXT_PUBLIC_SUPABASE_URL=""  # Optional: fallback for SUPABASE_URL

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
SESSION_PASSWORD="your-secure-session-password-at-least-32-characters-long"
JWT_SECRET="your-jwt-secret-key"

# Admin users (comma-separated emails)
# ADMIN_EMAILS="admin@example.com,owner@example.com"

# -----------------------------------------------------------------------------
# App
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL="http://localhost:3000"
APP_NAME="LeadBotStudio"

# -----------------------------------------------------------------------------
# AWS (S3 + Bedrock share the same credentials)
# -----------------------------------------------------------------------------
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME=""

# Bedrock embeddings (optional overrides)
# AWS_BEDROCK_REGION="us-east-1"
# TITAN_EMBEDDING_MODEL="amazon.titan-embed-text-v2:0"
# TITAN_EMBEDDING_DIMENSIONS="1024"

# YouTube knowledge processing (optional â€” Lambda ARN)
# YOUTUBE_PROCESSOR_LAMBDA_ARN=""

# -----------------------------------------------------------------------------
# Pinecone (Vector DB for RAG)
# -----------------------------------------------------------------------------
PINECONE_API_KEY=""
PINECONE_CHATBOT_INDEX_NAME="leadbotstudio-embeddings"

# -----------------------------------------------------------------------------
# Email (Resend)
# -----------------------------------------------------------------------------
RESEND_API_KEY=""
EMAIL_FROM="noreply@leadbotstudio.com"

# -----------------------------------------------------------------------------
# Stripe (Billing)
# -----------------------------------------------------------------------------
STRIPE_SECRET_KEY=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_WEBHOOK_SECRET=""

# Stripe Price IDs (create products in Stripe Dashboard, then copy price IDs)
STRIPE_PRICE_PRO_MONTHLY=""
STRIPE_PRICE_PRO_ANNUAL=""
STRIPE_PRICE_AGENCY_MONTHLY=""
STRIPE_PRICE_AGENCY_ANNUAL=""

# -----------------------------------------------------------------------------
# Cache (Valkey / Redis)
# -----------------------------------------------------------------------------
VALKEY_HOST=""
VALKEY_PORT="6379"
VALKEY_PASSWORD=""

# -----------------------------------------------------------------------------
# Demo page (set after creating a demo chatbot)
# -----------------------------------------------------------------------------
# NEXT_PUBLIC_DEMO_EMBED_CODE=""

# -----------------------------------------------------------------------------
# Logging (all optional, default: false)
# -----------------------------------------------------------------------------
# ENABLE_VERBOSE_EXPORT_LOGS="false"
# ENABLE_AI_PROCESSING_LOGS="false"
# QUIET_LOGS="false"

# -----------------------------------------------------------------------------
# Network (optional)
# -----------------------------------------------------------------------------
# TRUSTED_PROXIES=""  # Comma-separated CIDRs for rate limiter
